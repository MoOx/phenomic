{
  "private": true,
  "name": "docs",
  "version": "1.0.0-alpha.8",
  "repository": "https://github.com/phenomic/phenomic.git",
  "scripts": {
    "showcase-screenshots": "babel-node scripts/showcase-screenshots.js",
    "optim": "imageoptim --jpeg-mini --image-alpha --quit --directory dist",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run -s showcase-screenshots",
    "test": "npm run -s build",
    "predeploy":
      "npm run -s test && (npm run -s optim || echo \"optim skipped because of failure\")",
    "deploy": "./scripts/deploy.sh"
  },
  "dependencies": {
    "@phenomic/cli": "^1.0.0-alpha.8",
    "@phenomic/core": "^1.0.0-alpha.8",
    "@phenomic/preset-react-app": "^1.0.0-alpha.8",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-ga": "^2.0.0",
    "react-helmet": "^5.0.0",
    "react-native-web": "^0.1.0",
    "react-router": "^3.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "gray-matter": "^2.1.1",
    "image-optim": "^3.0.0",
    "imageoptim-cli": "^1.14.9",
    "mkdirp": "^0.5.1",
    "nightmare": "^2.10.0",
    "png-jpg": "0.0.2",
    "rimraf": "^2.6.1"
  },
  "phenomic": {
    "presets": ["@phenomic/preset-react-app"]
  },
  "screenshotsSize": {
    "large": {
      "width": 1366,
      "height": 768
    },
    "small": {
      "width": 360,
      "height": 640
    }
  },
  "eslintConfig": {
    "rules": {
      "react/prop-types": 0
    }
  }
}
