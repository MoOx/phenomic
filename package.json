    "gray-matter": "^2.0.0",
    "loader-utils": "^0.2.11",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nano-logger": "^1.0.0",
    "npm-install-package": "^1.0.2",
    "opn": "^3.0.2",
    "rimraf": "^2.4.2",
    "rss": "^1.2.0",
    "webpack": "^1.11.0",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-error-notification": "^0.1.4",
    "webpack-hot-middleware": "^2.0.0",
    "webpack-nano-logs": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^0.9.1",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "coveralls": "^2.11.6",
    "eslint": "^1.7.2",
    "eslint-config-i-am-meticulous": "^2.0.0",
    "eslint-plugin-react": "^3.6.2",
    "expect": "^1.13.4",
    "expect-jsx": "^2.2.1",
    "fs-extra": "^0.26.4",
    "js-beautify": "^1.5.10",
    "lnfs-cli": "^1.0.1",
    "markdown-it": "^5.0.0",
    "npmpub": "^3.0.0",
    "nyc": "^5.2.0",
    "react": "^0.14.0",
    "react-addons-test-utils": "^0.14.1",
    "react-dom": "^0.14.0",
    "react-helmet": "^2.1.0",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.0.0",
    "redux-devtools": "^3.0.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.1",
    "stylelint": "^4.0.0",
    "stylelint-config-standard": "^2.0.0"
  },
  "peerDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "css-loader": "^0.17.0",
    "eslint": "^1.7.2",
    "eslint-config-i-am-meticulous": "^2.0.0",
    "eslint-loader": "^1.1.0",
    "eslint-plugin-react": "^3.6.2",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.1",
    "highlight.js": "^8.5.0",
    "invariant": "^2.1.1",
    "json-loader": "^0.5.2",
    "markdown-it": "^5.0.0",
    "markdown-it-toc-and-anchor": "^1.0.1",
    "postcss-browser-reporter": "^0.4.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.7.0",
    "postcss-reporter": "^1.3.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-helmet": "^2.1.0",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.0-rc5",
    "react-svg-loader": "0.0.6",
    "redux": "^3.0.0",
    "redux-devtools": "^3.0.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.1",
    "redux-thunk": "^1.0.3",
    "style-loader": "^0.12.3",
    "stylelint": "^4.0.0",
    "stylelint-config-standard": "^2.0.0",
    "webpack": "^1.12.1",
    "whatwg-fetch": "^0.9.0"
  },
  "scripts": {
    "prebabelify": "rimraf lib",
    "babelify": "babel --ignore __tests__ --copy-files src --out-dir lib",
    "prepublish": "npm run babelify",
    "predocs": "lnfs src docs/node_modules/statinamic/lib && lnfs package.json docs/node_modules/statinamic/package.json",
    "docs": "cd docs && npm install && npm test",
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:css": "stylelint '**/web_modules/**/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "tests": "ava --verbose '**/__tests__/*.js'",
    "pretest": "npm run lint",
    "test": "npm run tests && npm run docs",
    "test-with-coverage": "nyc npm run tests && npm run docs",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "npmpub"
  },
  "config": {
    "nyc": {
      "exclude": [
        "**/__tests__/**/*.js"
      ]
    }
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-1"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ],
    "globals": {
      "__BASE_URL__": true,
      "__DEV__": true,
      "__PROD__": true,
      "__DEVTOOLS__": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
