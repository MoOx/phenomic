{
  "name": "statinamic",
  "version": "0.6.1",
  "description": "A static website generator to create dynamic website using React components.",
  "keywords": [
    "react",
    "ssg",
    "static",
    "file",
    "site",
    "website",
    "blog",
    "generator",
    "markdown",
    "jekyll",
    "wintersmith",
    "blacksmith",
    "metalsmith",
    "gatsby"
  ],
  "author": "Maxime Thirouin",
  "license": "MIT",
  "repository": "https://github.com/MoOx/statinamic.git",
  "files": [
    "boilerplate",
    "docs/content",
    "lib",
    "src",
    "!**/__tests__"
  ],
  "bin": {
    "statinamic": "lib/bin/index.js"
  },
  "dependencies": {
    "chalk": "^1.1.0",
    "change-case-keys": "0.0.4",
    "commander": "^2.9.0",
    "connect-history-api-fallback": "^1.1.0",
