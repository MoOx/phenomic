{
  "name": "statinamic",
  "version": "0.5.1",
  "description": "A static website generator to create dynamic website using React components.",
  "keywords": [
    "react",
    "ssg",
    "static",
    "file",
    "site",
    "website",
    "blog",
    "generator",
    "markdown",
    "jekyll",
    "wintersmith",
    "blacksmith",
    "metalsmith",
    "gatsby"
  ],
  "author": "Maxime Thirouin",
  "license": "MIT",
  "repository": "https://github.com/MoOx/statinamic.git",
  "files": [
    "lib",
    "!**/__tests__"
  ],
  "bin": {
    "statinamic": "lib/bin/index.js"
  },
  "dependencies": {
    "chalk": "^1.1.0",
    "commander": "^2.9.0",
    "connect-history-api-fallback": "^1.1.0",
    "express": "^4.13.3",
    "gray-matter": "^2.0.0",
    "history": "^1.12.5",
    "loader-utils": "^0.2.11",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nano-logger": "^1.0.0",
    "npm-install-package": "^1.0.2",
    "opn": "^3.0.2",
    "rimraf": "^2.4.2",
    "rss": "^1.2.0",
    "webpack": "^1.11.0",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-error-notification": "^0.1.4",
    "webpack-hot-middleware": "^2.0.0",
    "webpack-nano-logs": "^1.0.0"
  },
  "devDependencies": {
    "babel": "^6.0.0",
    "babel-cli": "6.3.17",
    "babel-core": "^6.0.0",
    "babel-eslint": "^4.0.6",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "babel-tape-runner": "^1.2.0",
    "eslint": "^1.7.2",
    "eslint-plugin-react": "^3.6.2",
    "extend-tape": "^1.0.1",
    "lnfs-cli": "^1.0.1",
    "markdown-it": "^5.0.0",
    "nyc": "^5.1.1",
    "react": "^0.14.0",
    "react-addons-test-utils": "^0.14.1",
    "react-helmet": "^2.1.0",
    "tape": "^4.2.2",
    "tape-jsx-equals": "^1.0.0"
  },
  "peerDependencies": {
    "autoprefixer": "^6.0.2",
    "babel": "^5.8.23",
    "babel-eslint": "^4.0.6",
    "babel-loader": "^5.3.2",
    "babel-plugin-react-transform": "^1.1.1",
    "css-loader": "^0.17.0",
    "eslint": "^1.7.2",
    "eslint-loader": "^1.1.0",
    "eslint-plugin-react": "^3.6.2",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.1",
    "highlight.js": "^8.5.0",
    "history": "^1.17.0",
    "invariant": "^2.1.1",
    "json-loader": "^0.5.2",
    "markdown-it": "^5.0.0",
    "markdown-it-toc-and-anchor": "^1.0.1",
    "postcss-custom-media": "^5.0.0",
    "postcss-custom-properties": "^5.0.0",
    "postcss-loader": "^0.7.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-helmet": "^2.1.0",
    "react-redux": "^2.1.0",
    "react-router": "^1.0.0-rc3",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.1.1",
    "redux": "^2.0.0",
    "redux-devtools": "^2.1.0",
    "redux-thunk": "^0.1.0",
    "style-loader": "^0.12.3",
    "webpack": "^1.12.1",
    "whatwg-fetch": "^0.9.0"
  },
  "scripts": {
    "prebabelify": "rimraf lib",
    "babelify": "babel --copy-files src --out-dir lib",
    "prepublish": "npm run babelify",
    "lint": "eslint --fix src",
    "tape": "babel-tape-runner src/**/__tests__/*.js",
    "pretest": "npm run lint",
    "test": "npm run tape",
    "test-with-coverage": "nyc npm run tape",
    "posttest": "lnfs src docs/node_modules/statinamic/lib && cd docs && npm install && npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "babel": {
    "stage": 0
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "#parser": "babel-eslint support more syntax stuff than eslint for now",
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "no-console": 0,
      "indent": [
        2,
        2
      ],
      "max-len": [
        2,
        80,
        4
      ],
      "no-multiple-empty-lines": [
        2,
        {
          "max": 1
        }
      ],
      "quotes": [
        2,
        "double"
      ],
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "semi": [
        2,
        "never"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "comma-style": [
        2,
        "last"
      ],
      "brace-style": [
        2,
        "stroustrup"
      ],
      "dot-location": [
        2,
        "property"
      ],
      "computed-property-spacing": [
        2,
        "never"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "array-bracket-spacing": [
        2,
        "always"
      ],
      "space-after-keywords": [
        2,
        "always"
      ],
      "space-before-blocks": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "space-in-parens": [
        2,
        "never"
      ],
      "space-unary-ops": [
        2,
        {
          "words": true,
          "nonwords": false
        }
      ],
      "spaced-comment": [
        2,
        "always"
      ],
      "one-var": [
        2,
        "never"
      ],
      "no-var": [
        2
      ],
      "no-bitwise": [
        2
      ],
      "prefer-const": [
        2
      ],
      "react/jsx-closing-bracket-location": [
        2,
        "tag-aligned"
      ],
      "react/jsx-curly-spacing": [
        2,
        "always"
      ],
      "react/jsx-indent-props": [
        2,
        2
      ],
      "react/jsx-no-duplicate-props": 2,
      "react/jsx-no-literals": 2,
      "react/jsx-no-undef": 2,
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/no-did-mount-set-state": 2,
      "react/no-did-update-set-state": 2,
      "react/no-direct-mutation-state": 2,
      "react/no-multi-comp": 2,
      "react/no-unknown-property": 2,
      "react/prefer-es6-class": 2,
      "react/prop-types": 2,
      "react/react-in-jsx-scope": 2,
      "react/require-extension": 2,
      "react/self-closing-comp": 2,
      "react/sort-comp": 2,
      "react/wrap-multilines": 2
    },
    "globals": {
      "__BASE_URL__": true,
      "__DEV__": true,
      "__PROD__": true,
      "__DEVTOOLS__": true
    },
    "plugins": [
      "react"
    ]
  }
}
